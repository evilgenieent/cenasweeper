body
  font-family: Verdana, Tahoma, sans-serif
  color: white

.jumbotron
  background: #4608a3
  background-image: -webkit-linear-gradient(#4608a3, #0665dc)
  height: auto
  width: 100%
  z-index: 100 !important
  *
    color: white
  &.footer
    padding: 20px 0
    background: #0665dc
    background-image: -webkit-linear-gradient(#0665dc, #06badc)

h6
  margin: 0 0 0 0

input
  border: 2px solid white
  color: white
  background-color: transparent
  width: 96%
  padding: 7px 10px
  font-size: 16px
  outline: none

button
  border: 2px solid white
  color: white
  background-color: transparent
  padding: 7px 30px
  margin-top: 20px
  font-size: 16px
  outline: none
  &:hover
    background-color: white
    color: #0665dc
    cursor: pointer

.cs-field
  background-color: lightblue
  width: 25px
  height: 25px
  text-align: center
  &:hover
    background-color: yellow
  &.cs-visited
    background-color: green
    &.cs-empty
      background-color: grey
    &.cs-cena
      background-color: red
  &.cs-flagged
    background-color: purple
  > img
    width: 25px
    height: 25px
