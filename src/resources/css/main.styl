cs-blue = #0665dc

body
  font-family: Verdana, Tahoma, sans-serif
  color: white

.jumbotron
  background: #4608a3
  background-image: -webkit-linear-gradient(#4608a3, cs-blue)
  height: auto
  width: 100%
  z-index: 100 !important
  *
    color: white
  &.footer
    padding: 20px 0
    background: cs-blue
    background-image: -webkit-linear-gradient(cs-blue, #06badc)

h6
  margin: 0 0 0 0

input
  border: 2px solid white
  color: white
  background-color: transparent
  width: 96%
  padding: 7px 10px
  font-size: 16px
  outline: none

button
  border: 2px solid white
  color: white
  background-color: transparent
  padding: 7px 30px
  margin-top: 20px
  font-size: 16px
  outline: none
  &:hover
    background-color: white
    color: cs-blue
    cursor: pointer

.cs-field
  background-color: lightblue
  border: 1px solid white
  color: white
  width: 25px
  height: 25px
  text-align: center
  &:hover
    border: 1px solid cs-blue
    cursor: crosshair
  &.cs-visited
    border: 1px solid cs-blue
    background-color: cs-blue
    &:hover
      cursor: not-allowed
    &.cs-empty
      border: 1px solid grey
      background-color: grey
    &.cs-cena
      background-color: red
  &.cs-flagged
    background-color: purple
  > img
    width: 25px
    height: 25px
